# ================================
# Memoria.uy - MVP Configuration
# ================================
# Copy this to .env and customize

# Django Settings
# ================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database
# ================================
# SQLite is used by default (no configuration needed)
# File will be created as db.sqlite3 in project root

# For production with Dockerized Postgres, uncomment:
# DB_NAME=memoria
# DB_USER=memoria
# DB_PASSWORD=your-secure-password
# DB_HOST=db
# DB_PORT=5432

# Optional: External Postgres (like Supabase)
# SUPABASE_DATABASE_URL=postgresql://user:password@host:5432/dbname

# ================================
# That's it for MVP!
# ================================
# Below are optional for future phases:

# Phase 2: Browser Extension API
# ================================
# CORS_ALLOWED_ORIGINS=chrome-extension://your-extension-id

# Phase 3: LLM Enrichment
# ================================
# Gemini API (free tier: 15 RPM)
# GOOGLE_API_KEY=your-google-api-key

# OpenRouter (fallback models)
# OPENROUTER_API_KEY=your-openrouter-key
# OR_SITE_URL=https://memoria.uy
# OR_APP_NAME=memoria.uy

# Phase 3+: Celery (Background Tasks)
# ================================
# REDIS_URL=redis://localhost:6379/0
# For Docker: REDIS_URL=redis://redis:6379/0

# Email (Future - for password reset, notifications)
# ================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@memoria.uy

# Django Allauth
# ================================
# ACCOUNT_ALLOW_SIGNUPS=False  # Set to True to allow new registrations
